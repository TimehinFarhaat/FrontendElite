@model List<InquiryDto>
@{
    ViewData["Title"] = "Inquiries";
}

<div class="container mt-4">
    <h1 class="mb-4 fw-bold text-primary">📩 Inquiries</h1>

    <!-- Alerts -->
    <div id="alertContainer">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>

    <!-- Inquiry Table -->
    <div class="card shadow-sm rounded-4 border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">No inquiries available</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var inquiry in Model)
                        {
                            var hasResponse = !string.IsNullOrWhiteSpace(inquiry.Response) && inquiry.Response != "No response yet";

                            <!-- Main Row -->
                            <tr>
                                <td>
                                    <div class="fw-semibold">@inquiry.Name</div>
                                </td>
                                <td>@inquiry.Email</td>
                                <td class="text-end">
                                    <button class="btn btn-sm btn-outline-primary rounded-pill" onclick="toggleDetails('@inquiry.Id')">
                                        <i class="bi bi-chat-dots"></i> Details
                                    </button>

                                    @if (hasResponse)
                                    {
                                        <form method="post" asp-action="Delete" asp-controller="Inquiries" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@inquiry.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill"
                                                    onclick="return confirm('Delete this inquiry?');">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-sm btn-outline-secondary rounded-pill" disabled
                                                title="Cannot delete inquiry that has no response.">
                                            <i class="bi bi-ban"></i> Delete
                                        </button>
                                    }
                                </td>
                            </tr>

                            <!-- Collapsible Details -->
                            <!-- Collapsible Details -->
                            <tr id="details-row-@inquiry.Id" class="details-row">
                                <td colspan="3">
                                    <div class="details-card p-3 rounded-3 shadow-sm">
                                        <!-- Car Info (read-only) -->
                                        <p class="mb-2"><strong>Car:</strong> @inquiry.carMaker @inquiry.carModel</p>

                                        <p class="mb-2"><strong>Message:</strong> @inquiry.Message</p>

                                        <!-- Response Form -->
                                        <form method="post" asp-action="Reply" asp-controller="Inquiries">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@inquiry.Id" />

                                            <div class="mb-3">
                                                <label class="fw-semibold">Response</label>
                                                <textarea class="form-control rounded-3 shadow-sm" name="response" rows="3">@((!string.IsNullOrWhiteSpace(inquiry.Response) && inquiry.Response != "No response yet") ? inquiry.Response : "")</textarea>
                                            </div>

                                            <button type="submit" class="btn btn-success rounded-pill">
                                                <i class="bi bi-send"></i> @(!string.IsNullOrWhiteSpace(inquiry.Response) && inquiry.Response != "No response yet" ? "Update Response" : "Send Response")
                                            </button>
                                        </form>

                                        <!-- Delete Response -->
                                        @if (!string.IsNullOrWhiteSpace(inquiry.Response) && inquiry.Response != "No response yet")
                                        {
                                            <form method="post" asp-action="DeleteResponse" asp-controller="Inquiries" class="d-inline mt-3">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@inquiry.Id" />
                                                <button type="submit" class="btn btn-warning rounded-pill"
                                                        onclick="return confirm('Delete this response?');">
                                                    <i class="bi bi-x-circle"></i> Delete Response
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>

                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleDetails(id) {
            const row = document.getElementById("details-row-" + id);
            row.classList.toggle("show");
        }

        // Auto-hide alerts after 3 seconds
        window.addEventListener("DOMContentLoaded", () => {
            const alerts = document.querySelectorAll("#alertContainer .alert");
            alerts.forEach(alert => {
                setTimeout(() => {
                    alert.classList.remove("show");
                    alert.classList.add("fade");
                    setTimeout(() => alert.remove(), 500);
                }, 3000);
            });
        });
    </script>
}

<style>
    /* Collapsible row animation */
    .details-row {
        display: none;
        transition: all 0.3s ease-in-out;
    }

        .details-row.show {
            display: table-row;
        }

    .details-card {
        background: #f9f9f9;
        border-left: 4px solid #0d6efd;
    }

    /* Gradient buttons */
    .btn-outline-primary {
        border: 1px solid #0d6efd;
    }

        .btn-outline-primary:hover {
            background: linear-gradient(90deg, #0d6efd, #00c6ff);
            color: white;
        }

    .btn-outline-danger:hover {
        background: linear-gradient(90deg, #dc3545, #ff6b6b);
        color: white;
    }

    .btn-outline-secondary {
        border: 1px solid #6c757d;
    }

    textarea {
        resize: none;
    }
</style>
