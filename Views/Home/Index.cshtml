@{
    ViewData["Title"] = "Home";
}

<style>
    /* Smooth fade-in animation */
    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .hero {
        min-height: 90vh;
        display: flex;
        align-items: center;
        background: linear-gradient(135deg, #f8f9fa, #ffffff);
    }

    .hero h1 {
        animation: fadeInUp 0.8s ease both;
    }

    .hero p {
        animation: fadeInUp 1s ease both;
    }

    .card {
        border-radius: 1rem;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .card:hover {
        transform: translateY(-4px);
        box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.08);
    }

    .feature {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 1rem;
    }

    .feature:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 2rem rgba(0,0,0,0.06);
    }

    .feature-icon {
        width: 56px;
        height: 56px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #e9f2ff;
        border-radius: 50%;
        color: #0d6efd;
    }

    .step-icon {
        width: 36px;
        height: 36px;
        font-size: 0.9rem;
    }

    section {
        scroll-margin-top: 80px;
    }
</style>

<!-- HERO -->
<section class="hero py-6">
    <div class="container">
        <div class="row align-items-center gy-5">
            <div class="col-lg-7">
                <h1 class="display-4 fw-bold mb-3">
                    Find your perfect ride — 
                    <span class="text-primary">when it arrives.</span>
                </h1>
                <p class="lead text-muted mb-4">
                    EliteCars is a trusted marketplace for premium vehicles. Admins add inventory, and buyers can browse listings and send inquiries directly.
                </p>

                <a href="@Url.Action("Index", "Cars")" 
                   class="btn btn-lg btn-primary rounded-pill px-4 shadow-sm d-inline-flex align-items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" 
                         viewBox="0 0 24 24" class="me-2" fill="currentColor">
                         <path d="M3 13l1.5-4.5C5 7 6 6 7.5 6h9C18 6 19 7 19.5 8.5L21 13v6a1 1 0 01-1 1h-1a1 1 0 01-1-1v-1H7v1a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM7 11a2 2 0 100-4 2 2 0 000 4zM17 11a2 2 0 100-4 2 2 0 000 4z"/>
                    </svg>
                    Browse Cars
                </a>

                <ul class="list-unstyled mt-4 d-flex gap-4 flex-wrap">
                    <li class="text-muted"><strong>✔</strong> Verified listings</li>
                    <li class="text-muted"><strong>✔</strong> Multiple photos per car</li>
                    <li class="text-muted"><strong>✔</strong> Quick inquiry replies</li>
                </ul>
            </div>

            <!-- Inquiry card -->
            <!-- Inquiry card -->
            <div class="col-lg-5">
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4 text-center">
                        <h5 class="card-title mb-3 fw-semibold">Check your inquiries</h5>
                        <p class="text-muted small mb-4">
                            View and manage your inquiries quickly.
                        </p>

                        <a href="@Url.Action("UserIndex", "Inquiries")"
                           class="btn btn-lg btn-primary rounded-pill px-4 shadow-sm">
                            Check Inquiries
                        </a>
                    </div>
                </div>

                <!-- "How it works" -->
                <div class="mt-4">
                    <h6 class="mb-3 fw-bold">How EliteCars works</h6>
                    <div class="d-flex gap-3 mb-3">
                        <div class="step-icon bg-primary text-white rounded-circle
                        d-inline-flex align-items-center justify-content-center">
                            1
                        </div>
                        <div>
                            <strong>Admins add cars</strong>
                            <div class="text-muted small">Inventory with images and specs.</div>
                        </div>
                    </div>
                    <div class="d-flex gap-3 mb-3">
                        <div class="step-icon bg-primary text-white rounded-circle
                        d-inline-flex align-items-center justify-content-center">
                            2
                        </div>
                        <div>
                            <strong>Customers browse</strong>
                            <div class="text-muted small">Search listings and send inquiries.</div>
                        </div>
                    </div>
                    <div class="d-flex gap-3">
                        <div class="step-icon bg-primary text-white rounded-circle
                        d-inline-flex align-items-center justify-content-center">
                            3
                        </div>
                        <div>
                            <strong>Admins respond</strong>
                            <div class="text-muted small">Quick replies keep things moving.</div>
                        </div>
                    </div>
                </div>
            </div>

            </div>
        </div>
    </div>
</section>

