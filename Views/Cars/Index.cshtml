@model List<CarDto>
@{
    ViewBag.Title = "Cars";
    var isLoggedIn = User.Identity.IsAuthenticated;
    var isAdmin = Context.Session.GetString("IsAdmin") == "true";

    var apiBaseUrl = string.IsNullOrWhiteSpace(ViewBag.ApiBaseUrl)
    ? "https://localhost:7267"
    : ViewBag.ApiBaseUrl;
    var svgFallback = "data:image/svg+xml;base64,";
}

<div class="container d-flex flex-column align-items-center py-4" style="min-height:90vh;">
    <div class="card shadow-lg p-4 rounded" style="max-width: 1000px; width: 100%;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="text-primary mb-0"><i class="bi bi-car-front-fill me-2"></i> Cars</h3>
            @if (isAdmin)
            {
                <a asp-controller="Cars" asp-action="Create" class="btn btn-primary rounded-pill shadow-sm">
                    <i class="bi bi-plus-circle me-1"></i> Create Car
                </a>
              
            }
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center rounded-pill shadow-sm">
                <i class="bi bi-check-circle-fill me-1"></i> @TempData["Success"]
            </div>
        }
        else if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center rounded-pill shadow-sm">
                <i class="bi bi-exclamation-triangle-fill me-1"></i> @TempData["Error"]
            </div>
        }

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info text-center shadow-sm rounded">
                <i class="bi bi-info-circle me-1"></i> No cars available.
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var car in Model)
                {
                    var images = car.Images?.ToList() ?? new List<CarImageDto>();
                    <div class="col-12 col-md-6">
                        <div class="card h-100 shadow-sm border-0 rounded-3">
                            <img src="@(images.Any() ? $"{apiBaseUrl}/{images[0].ImageUrl}" : svgFallback)"
                                 class="card-img-top rounded-top"
                                 style="height:200px; object-fit:cover;"
                                 alt="@car.Make @car.Model"
                                 onerror="this.onerror=null;this.src='@svgFallback';" />

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-primary">@car.Make @car.Model</h5>
                                <p class="text-muted small">@(!string.IsNullOrEmpty(car.Description) ? car.Description : "No description available.")</p>

                                <div class="mt-auto d-flex justify-content-between">
                                    <div class="d-flex gap-2">
                                        <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id"
                                           class="btn btn-sm btn-outline-primary rounded-pill">
                                            <i class="bi bi-info-circle me-1"></i> Details
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-secondary rounded-pill"
                                                data-bs-toggle="modal" data-bs-target="#imagesModal-@car.Id">
                                            <i class="bi bi-images me-1"></i> Images (@images.Count)
                                        </button>
                                    </div>

                                    @if (isAdmin)
                                    {
                                        <form method="post" asp-action="Delete" asp-route-id="@car.Id" class="d-inline delete-form">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger rounded-pill">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                   

                    <!-- Modal -->
                    <div class="modal fade" id="imagesModal-@car.Id" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-lg modal-dialog-centered">
                            <div class="modal-content rounded-3 shadow-lg">
                                <div class="modal-header border-0">
                                    <h5 class="modal-title text-primary">@car.Make @car.Model — Images</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <div id="carousel-@car.Id" class="carousel slide" data-bs-ride="false">
                                        <div class="carousel-inner rounded">
                                            @if (images.Any())
                                            {
                                                for (int i = 0; i < images.Count; i++)
                                                {
                                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                                        <img src="@($"{apiBaseUrl}/{images[i].ImageUrl}")"
                                                             class="d-block w-100 rounded"
                                                             style="max-height:450px; object-fit:cover;"
                                                             alt="Image @(i + 1)"
                                                             onerror="this.onerror=null;this.src='@svgFallback';" />
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                <div class="carousel-item active">
                                                    <img src="@svgFallback" class="d-block w-100" alt="No image" />
                                                </div>
                                            }
                                        </div>
                                        @if (images.Count > 1)
                                        {
                                            <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@car.Id" data-bs-slide="prev">
                                                <span class="carousel-control-prev-icon"></span>
                                            </button>
                                            <button class="carousel-control-next" type="button" data-bs-target="#carousel-@car.Id" data-bs-slide="next">
                                                <span class="carousel-control-next-icon"></span>
                                            </button>
                                        }
                                    </div>

                                    @if (images.Count > 1)
                                    {
                                        <div class="mt-3 d-flex gap-2 flex-wrap">
                                            @for (int i = 0; i < images.Count; i++)
                                            {
                                                <img src="@($"{apiBaseUrl}/{images[i].ImageUrl}")"
                                                     class="img-thumbnail rounded"
                                                     style="cursor:pointer; width:70px; height:50px; object-fit:cover;"
                                                     data-bs-target="#carousel-@car.Id"
                                                     data-bs-slide-to="@i"
                                                     onerror="this.onerror=null;this.src='@svgFallback';" />
                                            }
                                        </div>
                                    }
                                </div>
                                <div class="modal-footer border-0">
                                    <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }


                @if (isAdmin)
                {
                    <div class="d-flex justify-content-end mt-4">
                        <a asp-controller="Inquiries" asp-action="Index" class="btn btn-success rounded-pill shadow-sm">
                            View Inquiries <i class="bi bi-arrow-right ms-2"></i>
                        </a>
                    </div>
                }
            </div>

          
        }
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(alert => bootstrap.Alert.getOrCreateInstance(alert).close());
        }, 4000);

        document.querySelectorAll('.delete-form').forEach(form => {
            form.addEventListener('submit', function (event) {
                if (!confirm("Are you sure you want to delete this car?")) {
                    event.preventDefault();
                }
            });
        });
    </script>
}
